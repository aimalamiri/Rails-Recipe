<!doctype html>
<html lang="en">
<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- Font Awesome CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css"/>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>
  <title>Recipe App</title>
</head>

<body style='background:#F8F8F8;'>
<%= render 'layouts/layout/header' %>
<div class='container'>
  <% if notice %>
    <p class=" mt-3 alert alert-success"><%= notice %></p>
  <% end %>
  <% if alert %>
    <p class="mt-3 alert alert-danger"><%= alert %></p>
  <% end %>
  <% if flash[:success] %>
    <div class="alert alert-solid-success alert-bold" role="alert">
      <p class=" mt-3 alert alert-success"><%= sanitize(flash[:success]) %></p>
    </div>
  <% end %>
  <% if flash[:error] %>
    <div class="alert alert-solid-danger alert-bold" role="alert">
      <p class=" mt-3 alert alert-danger"><%= sanitize(flash[:error]) %></p>
    </div>
  <% end %>

  <%= yield %>
</div>

<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>

</body>
</html>

